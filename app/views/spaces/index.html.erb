<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Space</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="res">
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.space %></td>
        <% unless space.order.present? %>
          <td><%= link_to "â—‹", space_orders_path(space.id), method: :post, remote: true %></td>
        <% else %>
          <td><%= @orders.user.name %></td>
        <% end %>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <script>
      (function() {
