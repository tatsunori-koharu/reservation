<p id="notice"><%= notice %></p>

<h1>Spaces</h1>
<table class="calendar" border="1" >
  <thead>
    <tr>
      <th>
        <p>
          時間\日
        </p>
      </th>
      <% @week_days.each do |day| %>
        <th class='item'>
          <div class='date'>
            <%= day[:month] %>/<%= day[:date] %> <%= day[:wday] %>
          </div>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @hours.each do |hour| %>
        <td><%= hour.hour %>:00</td>
      
      <% @week_days.length.times do %>
        <td>
          <%= form_with url: "/spaces", method: :post, local: true do |f| %>
          <%= f.label :start_time %>
          <input name="start_time" type="hidden" value=<%= hour %>>
          <%= f.label :end_time %>
          <input name="end_time" type="hidden" value=<%= hour %>>
          <%= f.submit "○" %>
          </label>
          <% end %>
        </td>
      <% end %>
      </tr>
      <% end %>
    
  </tbody>
</table>

